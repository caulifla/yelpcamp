<% include partials/header %>

<div class="container">
    <br>
    <h1>Add new campground</h1>
    <br>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label>Campground name</label>
            <input type="text" class="form-control" placeholder="" name="name">
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="url" class="form-control" placeholder="" name="image">
        </div>
        <div class="form-group">
            <label>More Info</label>
            <input class="form-control" placeholder="" name="info">
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
        <input type="button" onclick="history.back();" value="Back" class="btn btn-primary">
    </form>
</div>

<% include partials/footer %>