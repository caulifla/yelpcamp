<% include partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1>Welcome to our camping page</h1>
        <hr>
        <p>Here you can view various camping sites all around the world. Choose the one 
        which suits you and plan your trip.</p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img class="img-thumbnail" src="<%= campground.image %>">
                   <div class="caption">
                       <h5><%= campground.name %></h5>
                   </div>
                   <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More info</a>
                   <p>&nbsp;</p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>